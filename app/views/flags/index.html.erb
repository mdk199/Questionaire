<% @flags.each do |flag| %>
  <tr>
    <td><%= flag.flagable_id %></td>
    <td><%= flag.flagable_type %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
