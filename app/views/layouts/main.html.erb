<html>
  <head>
    <%= render "shared/head" %>
  </head>
  <body>
    <%= render "shared/top_nav" %>
    <div class="container">
      <div class="row">
        <div class="span2">
          <%= render 'shared/sidebar'%>
        </div>
        <div class="span9">
          <%= show_alert(alert) %>
          <%= show_notice(notice) %>
          <%= yield %>    
        </div><!--/.container-->
      </div>
      <%= render "shared/footer" %>
    </div>
    
    <script>
      $(document).ready(function() {
        $('[data-toggle=offcanvas]').click(function() {
          $('.row-offcanvas').toggleClass('active');
        });
      });
    </script>
  </body>  
</html>