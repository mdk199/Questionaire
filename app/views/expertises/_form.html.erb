<%= form_for(@expertise) do |f| %>
  <%= render "shared/error_messages", :object => @expertise %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.text_area :expertise, :id=>"tags", :class=>"set-height"%>
  <br/>
  <div class="actions"> 
    <%= f.submit "Submit", :class => "btn btn-primary btn-mini"%>
  </div>
<% end %>
