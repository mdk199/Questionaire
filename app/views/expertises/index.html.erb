<blockquote>
  <p>Questions to Answer</p>
</blockquote>
<span class="add-new">
  <%= link_to 'New Expertise', new_expertise_path %>
</span>
<table  class="table table-hover table-striped">
  <tr>
    <th>Expertise</th>
    
    <th style = "width:200px;">Actions</th>
  </tr>

<% @expertises.each do |expertise| %>
  <tr>
    <td><%= link_to expertise.expertise, expertise %></td>
    <td>
          <%= link_to 'Edit', edit_expertise_path(expertise) %> | 
          <%= link_to 'Delete', expertise, method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </td>
  </tr>
<% end %>
</table>