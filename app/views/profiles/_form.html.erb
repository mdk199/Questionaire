<div class="page-header">
  <h1>Profile: <%= current_user.profile.try(:fullname) || current_user.email %></h1>
</div>
<%= form_for @profile, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="row">
    <div class="span2">
      <div class="control-group">
        <%= f.label :photo, (image_tag @profile.photo.url(:medium), :class => "img-rounded"), :class => 'control-label' %>
      </div>
    </div>
    <div class="span7">
      <%= render "shared/error_messages", :object => @profile %>

      <div class="control-group">
        <%= f.label :photo, "Profile Picture", :class => 'control-label' %>
        <div class="controls">
          <%= f.file_field :photo %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :first_name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :first_name, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :last_name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :last_name, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :dob, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :dob, :class => 'datepicker', :readonly => true %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :street, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :street, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :city, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :city, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :state, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :state, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :pin, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :pin, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :country, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :country, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :mobile, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :mobile, :class => 'text_field' %>
        </div>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id, :class => 'number_field' %>
      
      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary btn-mini' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    profiles_path, :class => 'btn' %>
      </div>
    </div>
  </div>
<% end %>

<%= render "shared/calender_lib" %>
