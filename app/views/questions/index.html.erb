<h3>Listing questions</h3>
<span class="add-new">
  <%= link_to 'New Question', new_question_path %>
</span>
<table class="table table-hover table-striped">
  <tr>
    <th>Question</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.question %></td>
    <td><h6><%= link_to 'Show', question %></h6></td>
    <td><h6><%= link_to 'Edit', edit_question_path(question) %></h6></td>
    <td><h6><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></h6></td>
  </tr>
<% end %>
</table>

<br />


