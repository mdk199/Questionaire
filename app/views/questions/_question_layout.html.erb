<div class="panel-group" id="accordion">
  <div class="panel panel-info">
    <span class="action_links float-right">
      <%= link_to '', edit_question_path(object), :title => "Edit", :class=>'icon-edit' %> 
      <%= link_to '', object, method: :delete, :title => "Delete", :class=>'icon-remove', data: { confirm: 'Are you sure?' } %>
    </span>
    <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#<%= object.id %>">
      <div class="span7 panel-title">
        <%= object.question%>
         <h6><i class="icon-tags"></i>
        <% object.tags.each do |q|%>
        <%= q.name%> 
        <%end%>
        </h6>
      </div>
      <div class="clear"></div>
    </div>
    <div id="<%= object.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <% object.answers.each do |a|%>
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="icon-user icon-white"></i>&nbsp;&nbsp;<%= a.user.email%>
            <h6 class="float-right">Updated At: <%= a.updated_at %></h6>
          </div>
          <div class="panel-body">
            <%= a.answer %></br>
          </div>
        </div>
      </br>
        <% end %>
        <form role="form">
          <div class="panel panel-success">
            <div class="panel-heading">
              Add an Answer
            </div>
            <div class="panel-body">
              <textarea class="form-control" rows="3"></textarea>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
   </div>
  </div>
</div>