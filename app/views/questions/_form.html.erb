<%= nested_form_for(@question) do |f| %>
  <%= render "shared/error_messages", :object => @question %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= f.label :question %>
    </div>
    <div class="panel-body">
      <%= f.text_area :question, :rows => 3, :cols => 500, :id=>'editor1' %>
      <br/>
      <b>Publish question</b> <%= f.check_box :published,:style=>"margin-top:-3px"%> 
      <h5>Tags to the Question </h5>
     <%= f.fields_for :tags do |tag| %>
        <div class="input-append">
          <%= tag.text_field :name, :class=>"span5", :id=>"appendedInputButton"%>
          <%= tag.link_to_remove "X",:title => "Delete", :class=>'btn'%>
        </div>
      <% end %>
      
      <%= f.link_to_add "Add a Tag", :tags,:class=>"btn btn-default" %>
      <%= f.submit "Submit", :class => "btn btn-primary"%>
    </div>
  </div>
<% end %>
<script>
  CKEDITOR.replace( 'editor1', {
  toolbarGroups: [
    { name: 'clipboard',   groups: [ 'clipboard', 'undo' ] },     // Group's name will be used to create voice label.
    { name: 'basicstyles', groups: [ 'basicstyles', 'cleanup' ] },
    { name: 'paragraph', groups: [ 'list', 'indent', 'blocks', 'align', 'bidi' ] },
    { name: 'colors' }
  ]

  // NOTE: Remember to leave 'toolbar' property with the default value (null).
});
</script>
