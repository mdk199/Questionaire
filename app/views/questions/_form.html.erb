<%=form_for(@question) do |f| %>
  <%= render "shared/error_messages", :object => @question %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h5>Question Title:</h5>
      <%= f.text_field :title, :class => "span" %>
    </div>
    <div class="panel-body">
      <b class="span1">Content:</b>
      <div class="clearfix"></div>
      <%= f.cktext_area :question , :rows => 3%>
      <br/>
      <b>Publish question</b> <%= f.check_box :published,:style=>"margin-top:-3px"%> 
      <p class="label label-info">Tick publish question if you want the question to be visible to public.</p> <p class="label label-warning">Note: Only published questions will be answered by others. You can even publish/unpublish a question later. </p>
      <h5>Tags to the Question </label>
      <%= f.text_area :tag_list, :id=>"tags", :class=>"set-height"%><br/>
      <%= f.submit "Submit", :class => "btn btn-primary btn-mini"%>
    </div>
  </div>
<% end %>
