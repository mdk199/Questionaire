<body>
  <div style="margin: auto; width:500px;">
    <h2>Sign up</h2>
    <hr/>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="span2"><%= f.label :email %></div>
    <div class="span3"><%= f.email_field :email, :autofocus => true %></div>
    <div class="clearfix"></div>
    <div class="span2"><%= f.label :username %></div>
    <div class="span3"><%= f.text_field :username%></div>
    <div class="clearfix"></div>
    <div class="span2"><%= f.label :password %></div>
    <div class="span3"><%= f.password_field :password %></div>
    <div class="clearfix"></div>
    <div class="span2"><%= f.label :password_confirmation %></div>
    <div class="span3"><%= f.password_field :password_confirmation %></div>
    <div class="clearfix"></div>
    <div class="span2"></div>
    <div class="span3"><%= f.submit "Sign up", :class => "btn btn-primary btn-mini"%></div> 
    <div class="clearfix"><hr/></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</body>
