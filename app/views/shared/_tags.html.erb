<h5>Tag List</h5>
<div style="height:180px; overflow:auto;">
  <ul class="list-group">
    <% Question.where(:published=> true).joins(:tags).select("count(question) as questions_count, tag_id,name").group(:tag_id).order("questions_count DESC").each do |tag| %>
        <li class="list-group-item">
          <span class="badge"><%= tag.questions_count%></span>
          <a href="/questions/tagged/<%=tag.tag_id%>" style="text-decoration:none;">
            <i class="icon-tags"></i> <%= tag.name %>
          </a>
        </li>
    <% end %>
  </ul>
</div>