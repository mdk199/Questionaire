<div class="col-xs-12 col-md-11">
  <div class="panel-group" id="accordion">
    <div class="float-right">
      <button type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-edit"></span>
      </button>
      <button type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-remove"></span>
      </button>
      <h6><%= link_to 'Edit', edit_question_path(object) %> | 
      <%= link_to 'Delete', object, method: :delete, data: { confirm: 'Are you sure?' } %></h6>
    </div>
    <div class="panel panel-default col-md-10 ">
      <div >
        <h6><a data-toggle="collapse" data-parent="#accordion" href="#<%= object.id %>"><%= object.question%>
        </a></h6>
      </div>
      <div id="<%= object.id %>" class="panel-collapse collapse">
        <div class="panel-body">
          <form role="form">
            <label>Answer </label></br>
            <textarea class="form-control" rows="3"></textarea>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
     </div>
    </div>
  </div>
</div>