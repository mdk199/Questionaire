<div class="panel-group" id="accordion">
  <div class="panel panel-primary">
    <div class="panel-heading" ref>
      <div data-toggle="collapse" data-parent="#accordion" href="#<%= object.id %>">
        <%= object.question%>
        <span class="float-right">
          <%= link_to "", edit_question_path(object), :title => "Edit", :class=>'icon-edit' %> 
          <%= link_to '', object, method: :delete, :title => "Delete", :class=>'icon-remove', data: { confirm: 'Are you sure?' } %>
        </span>
      </div>
      <div id="<%= object.id %>" class="panel-collapse collapse">
        <div class="panel-body">
          <% object.answers.each do|answers|%>
          <%= answers.answer%><br/>
          <% end %>
          <form role="form">
            <label>Submit your answer</label></br>
            <textarea class="form-control" rows="3"></textarea>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
     </div>
  </div>
</div>