<div class="col-xs-12 col-md-8">
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#<%= object.id %>"><%= object.question%>
          </a>
          <span class="float-right">
          <%= link_to 'Edit', edit_question_path(object) %> | 
          <%= link_to 'Delete', object, method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
        </h4>
      </div>
      <div id="<%= object.id %>" class="panel-collapse collapse">
        <div class="panel-body">
          <form role="form">
            <label>Answer </label></br>
            <textarea class="form-control" rows="3"></textarea>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
     </div>
    </div>
  </div>
</div>