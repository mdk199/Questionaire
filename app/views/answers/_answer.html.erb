<div id="answer_<%=answer.id%>" class="panel <%= answer_panel_class(answer) %>">
  <span class="action_links float-right">
    <%= answer_actions(current_user, answer) %>
  </span>
  <div class="panel-heading">
    <span>
      <%= image_tag "user.jpeg", :size => "30x30", :style => "border-radius:5px; border:1px solid #3A87AD;" %>
    </span>
    <%= answer.user.name %>
    <span class="tags">
      <a href="<%=answer_path(answer)%>" style="color:inherit;text-decoration: none;" title="Answer Details">
        <span class="badge"><%= pluralize(answer.comments_count, "Comment") %></span>
      </a>
    </span>
  </div>
  <div class="panel-body">
    <%= raw answer.answer %>
    <i><small class="float-right">Updated : <%= time_ago_in_words(answer.updated_at) %> ago</small></i>
    <hr/>
    <%= render :partial => "comments/comment", :collection => answer.comments.order("updated_at") %>
    <button class="btn btn-default btn-mini addbtn" type="button" data-toggle="modal" data-target="#myModal">Add Comment</button>
    <%= link_to 'Add Comment', add_comment_answer_path(answer),:remote=> true,:class=>'btn btn-primary btn-mini addbtn', :id=>"add_comment_#{answer.id}"%>
  </div>
  <div class="modal fade" data-fullscreen="true" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
  <div class="modal-dialog" >
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal-dialog" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>

</div>
<script>
$('#myModal').modal('hide');
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();
</script>
