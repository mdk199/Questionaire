<%= form_for(@comment) do |f| %>
  <%= render "shared/error_messages", :object => @comment %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>
  <div class="field">
    <%= f.label :answer_id %><br />
    <%= f.text_field :answer_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
