<h3>Listing Users</h3>
<table id="viewgrid" class="table table-hover table-striped">
  <thead>
    <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class=>"btn btn-mini btn-warning" %>
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />
<%= render "shared/datatable_lib"%>

