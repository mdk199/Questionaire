<h3>Listing All Tags</h3>
<table id="viewgrid" class="table table-hover table-striped">
  <thead>
    <tr>
    <th>Tag Name</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />
<%= render "shared/datatable_lib"%>

